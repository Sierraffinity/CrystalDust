script Route32_EventScript_Liz {
    trainerbattle_single(TRAINER_LIZ_1, "Uh-huh.\nYeah, and you know…\pPardon? You want to battle?\nI'm on the phone.\pOh, all right.\nBut let's make this fast.", "Oh!\nI've got to relieve my anger!")
    // TODO: Check phone strings for textbox fit

    specialvar(VAR_RESULT, ShouldTryRematchBattle)
    if(var(VAR_RESULT) == 1)
    {
        trainerbattle_rematch(TRAINER_LIZ_1, "You're late!\nLet's get started now!", "Oh!\nI've got to relieve my anger!")
        clearflag(FLAG_LIZ_OFFERED_REMATCH)
    }

    if (!flag(FLAG_PHONE_CARD_PICNICKER_LIZ))
    {
        if (!flag(FLAG_PICNICKER_LIZ_OFFERED_NUMBER))
        {
            msgbox("Oh? You're on a big journey to see\nthe sights?\lNeat! Let's be friends!\lCan I have your phone number?\pI want to hear about everything\nyou've seen!", MSGBOX_YESNO)
            setflag(FLAG_PICNICKER_LIZ_OFFERED_NUMBER)
        }
        else
        {
            msgbox("Let's be friends! Can I have your\nphone number?\pI want to hear about everything\nyou've seen!", MSGBOX_YESNO)
        }
        if (var (VAR_RESULT) == 1)
        {
            registerphonecontact(FLAG_PHONE_CARD_PICNICKER_LIZ) 
            msgbox("I'll telephone you if I hear\nanything interesting.", MSGBOX_AUTOCLOSE)
        }
        else
        {
            msgbox("Aww… You won't be my friend?", MSGBOX_AUTOCLOSE)
        }
        end
    }
    msgbox("I was having a nice chat, too.", MSGBOX_DEFAULT)
    release
}

