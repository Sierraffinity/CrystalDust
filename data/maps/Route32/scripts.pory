script Route32_EventScript_Ralph {
    trainerbattle_single(TRAINER_RALPH_1, "I'm really good at both fishing\nand {POKEMON}.\pI'm not about to lose to any kid!", "Tch!\nI tried to rush things…")

    // TODO: Check phone strings for textbox fit
    specialvar(VAR_RESULT, ShouldTryRematchBattle)
    if(var(VAR_RESULT) == 1)
    {
        trainerbattle_rematch(TRAINER_RALPH_1, "Hey kid!\nNo losing for me this day!", "Tch!\nI tried to rush things…")
        clearflag(FLAG_RALPH_OFFERED_REMATCH)
    }
    if (!flag(FLAG_PHONE_CARD_FISHER_RALPH))
    {
        if (!flag(FLAG_FISHER_RALPH_OFFERED_NUMBER))
        {
            msgbox("Don't young people fish anymore?\pI've seen rare {POKEMON} while I've\nbeen fishing…\lYou young people like that, right?\pWant to trade phone numbers?\nI'll let you know if I see anything.", MSGBOX_YESNO) 
            setflag(FLAG_FISHER_RALPH_OFFERED_NUMBER)
        }
        else
        {
            msgbox("Hm? So you do want me to phone if\nI see rare {POKEMON}?", MSGBOX_YESNO)
        }
        if (var (VAR_RESULT) == 1)
        {
            registerphonecontact(FLAG_PHONE_CARD_FISHER_RALPH) 
            msgbox("Yep, phone if I see rare {POKEMON}.\nDon't worry, I won't forget!", MSGBOX_AUTOCLOSE)
        }
        else
        {
            msgbox("Oh… My own kids won't even give\nme their phone numbers…\lIs that how young people are today?", MSGBOX_AUTOCLOSE)
        }
        end
    }
    msgbox("Fishing is a lifelong passion.\n{POKEMON} are lifelong friends!", MSGBOX_DEFAULT)
    release
}

